{
  "name": "haiku-light-editor",
  "version": "1.0.0",
  "description": "Haiku Light editor",
  "author": "daliusd",
  "license": "MIT",
  "repository": "daliusd/haiku-light-editor",
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.tsx",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "microbundle-crl --no-compress --format modern,cjs",
    "start": "microbundle-crl watch --no-compress --format modern,cjs",
    "prepare": "run-s build",
    "lint": "eslint --ext .tsx --ext .ts src/ && eslint --ext .tsx --ext ts example/src/",
    "test": "run-s test:unit",
    "test:full": "run-s lint test:unit test:build test:example test:e2e",
    "test:build": "run-s build",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "test:example": "cd example && cross-env CI=true npm run test",
    "test:e2e": "cd example && npm run e2e",
    "predeploy": "cd example && npm install && npm run build",
    "deploy": "gh-pages -d example/build"
  },
  "peerDependencies": {
    "react": "^16.0.0 || ^17.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "5.11.5",
    "@testing-library/react": "11.1.2",
    "@testing-library/user-event": "12.2.2",
    "@types/expect-puppeteer": "4.4.5",
    "@types/jest": "26.0.15",
    "@types/jest-environment-puppeteer": "4.4.0",
    "@types/pixelmatch": "5.2.2",
    "@types/node": "14.14.7",
    "@types/pngjs": "3.4.2",
    "@types/react": "16.9.56",
    "@types/puppeteer": "5.4.0",
    "@types/react-dom": "16.9.9",
    "@types/react-router-dom": "5.1.6",
    "@typescript-eslint/eslint-plugin": "4.7.0",
    "@typescript-eslint/parser": "4.7.0",
    "babel-eslint": "10.1.0",
    "cross-env": "7.0.2",
    "eslint": "7.13.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-config-standard": "16.0.1",
    "eslint-config-standard-react": "11.0.1",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-react": "7.21.5",
    "eslint-plugin-react-hooks": "4.2.0",
    "eslint-plugin-standard": "4.1.0",
    "gh-pages": "3.1.0",
    "husky": "4.3.0",
    "jest-puppeteer": "4.4.0",
    "lint-staged": "10.5.1",
    "microbundle-crl": "0.13.11",
    "npm-run-all": "4.1.5",
    "pixelmatch": "5.2.1",
    "pngjs": "6.0.0",
    "prettier": "2.1.2",
    "puppeteer": "5.4.1",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-router-dom": "5.2.0",
    "react-scripts": "4.0.0",
    "typescript": "4.0.5"
  },
  "files": [
    "dist"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "src/**/*.ts|src/**/*.tsx": [
      "eslint --max-warnings 0"
    ],
    "example/src/**/*.ts|example/src/**/*.tsx": [
      "eslint --max-warnings 0"
    ]
  },
  "dependencies": {}
}
